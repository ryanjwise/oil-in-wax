<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4 d-flex flex-column">
      <% if candle.picture.attached? %>
        <%= image_tag candle.picture, class: "card-img-top"%>
      <% else %>
        <%= image_tag 'https://via.placeholder.com/1600x900?text=No+Image+Available', class: "card-img-left"%>
      <% end %>
      <%= link_to 'Edit', candle_edit_path(candle.id), class:'m-1 btn btn-primary' %>
      <%= link_to 'Deactivate Listing', root_path, class:'m-1 btn btn-primary disabled' %>
      <% if candle.stock <= 0 %>
        <%= link_to 'Delete Listing', candle_destroy_path(candle.id), method: :delete, data:{ confirm: 'Are you sure?'}, class:'m-1 btn btn-danger' %>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><strong>Name: </strong><%= candle.name %></h5>
        <p class="card-text"><strong>Description: </strong><%= candle.description %></p>
        <p class="card-text">
          <small class="text-muted"><strong>Scents: </strong>
            <% candle.scents.each do |i| %>
              <%= "#{i}," %>
            <% end %>
          </small>
        </p>
        <p class="card-text">
          <small class="text-muted"><strong>Ingredients: </strong>
            <% candle.ingredients.each do |i| %>
              <%= "#{i}," %>
            <% end %>
          </small>
        </p>
        <span class="card-text badge bg-primary"><%= number_to_currency(candle.price) %></span>
        <span class="card-text badge bg-secondary "><%= candle.stock %> Ordered</span>
      </div>
    </div>
  </div>
</div>

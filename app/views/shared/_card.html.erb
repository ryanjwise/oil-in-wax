<div class="card" style="min-width:220px; max-width:250px;">
  <%= image_tag 'candle_backdrop', class: "card-img-top"%>
  <div class="card-body">
    <h5 class="card-title"><%= candle.name %></h5>
    <p class="card-text"><%= candle.description %></p>
    <div class="card-footer">
      <%= link_to "See More", candle_show_path(candle.id), class:"btn btn-primary" %>
    </div>
  </div>
</div>